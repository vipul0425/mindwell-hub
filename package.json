{
	"name": "mindwell",
	"version": "0.1.0",
	"author": "Vipul Gupta",
	"description": "Mindwell Hub Project for WordPress - Contains the custom blocks and the block based theme.",
	"license": "GPL-3.0",
	"scripts": {
		"lint:js": "wp-scripts lint-js assets/blocks --no-error-on-unmatched-pattern",
		"lint:js:fix": "npm run lint:js -- --fix",
		"lint:css": "wp-scripts lint-style mu-plugins/features-block/assets/blocks/**/*.{css,sass,scss} --allow-empty-input",
		"lint:css:fix": "npm run lint:css -- --fix",
		"lint": "npm-run-all --parallel lint:*",
		"build": "npm-run-all --sequential build:**",
		"build:blocks": "wp-scripts build --webpack-src-dir=mu-plugins/features-block/src --output-path=mu-plugins/features-block/build/blocks --webpack-copy-php",
		"start": "npm-run-all --parallel start:**",
		"start:blocks": "wp-scripts start --webpack-src-dir=mu-plugins/features-block/assets/blocks --output-path=mu-plugins/features-block/build/blocks"
	},
	"devDependencies": {
		"@wordpress/eslint-plugin": "^16.0.0",
		"@wordpress/prettier-config": "^2.25.0",
		"@wordpress/scripts": "^26.15.0",
		"eslint": "^8.49.0",
		"npm-run-all": "^4.1.5",
		"prettier": "npm:wp-prettier@^3.0.3"
	}
}
